#include <iostream>
using namespace std;
float area(float b,float h);
int main(){
    
    
    float base,altura;
    cout<<"ingresar el valor de la base : ";
    
    do{
        cin>>base;

    }while (base<=0);
     cout<<"ingresar el valor de la altura : ";
    
    do{
        cin>>altura;

    }while (altura<=0);
    
    cout<<" el area del triangulo es: "<<area(base,altura);
    
    return 0;
}

float area(float b, float h){
    
  return (b*h)/2.0;
 
}
